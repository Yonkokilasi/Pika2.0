<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josephinemenge.pika.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/f6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="0dp"
            android:text="PIKA "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="75sp" />

        <EditText
            android:id="@+id/fType"
            android:layout_width="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Enter a Food type e.g chicken"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="25sp"
            />


        <EditText
            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Health Label e.g peanut free"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="25sp"
            />

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="60dp">
            <Button
                android:id="@+id/FRecipeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/green"
                android:text="Find Recipe"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginRight="20dp">
            </Button>
            <Button
                android:id="@+id/SavedRecipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="Saved Recipe's"
                android:textColor="@color/white"
                android:textSize="15sp">
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
